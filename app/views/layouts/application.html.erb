<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
		<%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<div class="banner">
				<div class="name">
					<h1><%= link_to 'Taggy', root_path %></h1>
					<div class="tagline">Tag'em!</div>
				</div>
				<div class="avatar">					
					<% if UserSession.logged_in? %>
						<%= link_to gravatar_for(UserSession.current_user, :alt => UserSession.current_user.name), edit_user_path(UserSession.current_user) %><br/>			
						<%= link_to "Logout", logout_path %>                          
					<% end %>
				</div>            
				<div class="clear"></div>
			</div>
		
	  <div id="menu"> 
		<% if UserSession.logged_in? && !@hide_project_selector %>
			<div class="project_selector">
				<%= render :partial => 'projects/project_selector', :locals => {:projects => UserSession.current_user.projects.uniq} %>				
			</div>
		<% end %>
	  </div>
	   
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
			
			<div class="crumbs">
	      <%= render_crumbs %>
			</div>

      <%- if show_title? -%>
        <h2><%=h yield(:title) %></h2>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
