<h1><%= @project.name%></h1>
<h2>Select <%= @role.name%> </h2>

<% form_tag memberships_path do %>
	<%= hidden_field_tag :project_id, params[:project_id] %>
	<%= hidden_field_tag :role_id, params[:role_id] %>
	<% User.all.each do |user|%>
		<%= check_box_tag "user_ids[]", user.id, @selected_users.include?(user) %> <%= user.name%> <br/>
	<% end%>
	<%= submit_tag 'Save' %>
<% end %>	